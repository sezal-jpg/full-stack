<!DOCTYPE html>
<html>
<head>
    <title>Live Character Counter</title>

    <style>
        body {
            font-family: Arial;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: #f2f2f2;
        }

        .box {
            width: 300px;
            background: white;
            padding: 20px;
            border-radius: 8px;
        }

        textarea {
            width: 100%;
            height: 100px;
            padding: 8px;
            font-size: 14px;
        }

        .count {
            margin-top: 10px;
            font-size: 14px;
        }

        .warning {
            color: red;
        }
    </style>
</head>

<body>

<div class="box">
    <h3>Character Counter</h3>

    <textarea id="text" maxlength="100" onkeyup="countChar()"
        placeholder="Type here..."></textarea>

    <div class="count" id="count">
        0 / 100 characters
    </div>
</div>

<script>
    function countChar() {
        let text = document.getElementById("text").value;
        let length = text.length;
        let counter = document.getElementById("count");

        counter.innerText = length + " / 100 characters";

        if (length >= 90) {
            counter.classList.add("warning");
        } else {
            counter.classList.remove("warning");
        }
    }
</script>

</body>
</html>
